<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{.Title}}</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/static/css/blog.css">
</head>
<body class="antialiased">

    <!-- Header -->
    <header class="bg-white shadow-md sticky top-0 z-50">
        <div class="container mx-auto px-6 py-4">
            <div class="flex justify-between items-center">
                <!-- Logo -->
                <a href="/" class="text-2xl font-heading font-bold tracking-tight">
                    <span class="text-accent">Tech</span>Insights
                </a>

                <!-- Desktop Navigation -->
                <nav class="hidden md:flex items-center space-x-6">
                    <a href="/" class="text-gray-600 hover:text-accent">Home</a>
                    <a href="/" class="text-gray-600 hover:text-accent">Articles</a>
                    <a href="#" class="text-gray-600 hover:text-accent">About</a>
                    <a href="#" class="text-gray-600 hover:text-accent">Contact</a>
                    <!-- Search -->
                    <div class="relative">
                        <input type="search" placeholder="Search..." class="px-4 py-2 border rounded-full text-sm focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent">
                        <button class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-accent">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </nav>

                <!-- Mobile Menu Button -->
                <button id="menu-toggle" class="md:hidden focus:outline-none">
                    <i class="fas fa-bars text-xl text-gray-600"></i>
                </button>
            </div>

             <!-- Mobile Navigation (Hidden by default) -->
            <div id="mobile-menu" class="hidden md:hidden mt-4">
                <nav class="flex flex-col space-y-2">
                    <a href="/" class="py-2 text-gray-600 hover:text-accent border-b">Home</a>
                    <a href="/" class="py-2 text-gray-600 hover:text-accent border-b">Articles</a>
                    <a href="#" class="py-2 text-gray-600 hover:text-accent border-b">About</a>
                    <a href="#" class="py-2 text-gray-600 hover:text-accent">Contact</a>
                     <!-- Mobile Search -->
                    <div class="relative pt-2">
                        <input type="search" placeholder="Search..." class="w-full px-4 py-2 border rounded-full text-sm focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent">
                        <button class="absolute right-3 top-1/2 transform -translate-y-1/2 pt-2 text-gray-400 hover:text-accent">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </nav>
            </div>
        </div>
    </header>

    <!-- Main Content Area -->
    <div class="container mx-auto px-6 py-12">
        <div class="flex flex-col lg:flex-row gap-12">

            <!-- Post Content Column -->
            <main class="w-full lg:w-2/3">
                {{with .Post}}
                <article class="bg-white rounded-lg shadow-lg overflow-hidden">
                    <img src="https://images.unsplash.com/photo-1518770660439-4636190af475?auto=format&fit=crop&w=1200&q=80" alt="Featured Tech Post" class="w-full h-64 object-cover">

                    <div class="p-8">
                        <div class="mb-3 flex flex-wrap gap-2">
                            {{range .Categories}}
                                <a href="#" class="text-xs uppercase font-semibold tracking-wide text-accent bg-blue-50 px-2 py-1 rounded hover:bg-blue-100">{{.}}</a>
                            {{else}}
                                <a href="#" class="text-xs uppercase font-semibold tracking-wide text-accent bg-blue-50 px-2 py-1 rounded hover:bg-blue-100">Technology</a>
                            {{end}}
                        </div>

                        <h1 class="font-heading text-3xl font-bold mb-4">{{.Title}}</h1>

                        <div class="flex items-center text-sm text-gray-500 mb-6">
                            <img src="https://randomuser.me/api/portraits/men/32.jpg" alt="Author" class="w-8 h-8 rounded-full mr-2 object-cover">
                            <span>By Admin</span>
                            <span class="mx-2">•</span>
                            <span>{{.CreatedAt.Format "January 2, 2006"}}</span>
                            <span class="mx-2">•</span>
                            <span>{{.ViewCount}} views</span>
                        </div>
<!-- Edit and Delete Buttons -->
<div class="flex space-x-4 mb-6">
    <a href="/blog/edit/{{.ID}}" class="inline-flex items-center px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition">
        <i class="fas fa-edit mr-2"></i> Edit Post
    </a>
    <form action="/blog/delete/{{.ID}}" method="POST" class="inline" onsubmit="return confirm('Are you sure you want to delete this post?');">
        <button type="submit" class="inline-flex items-center px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600 transition">
            <i class="fas fa-trash-alt mr-2"></i> Delete Post
        </button>
    </form>
</div>

<div class="prose max-w-none">
    <p>{{.Content}}</p>
</div>
                        </div>
                    </div>
                </article>
                {{end}}

                <!-- Back to Blog Button -->
                <div class="mt-8">
                    <a href="/" class="inline-flex items-center px-4 py-2 bg-accent text-white rounded hover:bg-accent-dark transition">
                        <i class="fas fa-arrow-left mr-2"></i> Back to Blog
                    </a>
                </div>

                <!-- Related Posts (Optional) -->
                {{if .RelatedPosts}}
                <div class="mt-12">
                    <h2 class="font-heading text-2xl font-bold mb-6">Related Articles</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                        {{range .RelatedPosts}}
                            <article class="card-hover bg-white rounded-lg shadow overflow-hidden">
                                <a href="/blog/view/{{.ID}}">
                                    <img src="https://images.unsplash.com/photo-1605379399642-870262d3d051?auto=format&fit=crop&w=800&q=80" alt="Post Image" class="w-full h-48 object-cover">
                                </a>
                                <div class="p-5">
                                    <div class="mb-1">
                                        {{if .Categories}}
                                            <a href="#" class="text-xs uppercase font-semibold tracking-wide text-accent hover:underline">{{index .Categories 0}}</a>
                                        {{else}}
                                            <a href="#" class="text-xs uppercase font-semibold tracking-wide text-accent hover:underline">Technology</a>
                                        {{end}}
                                    </div>
                                    <h3 class="font-heading text-lg font-bold mb-2 hover:text-accent transition">
                                        <a href="/blog/view/{{.ID}}">{{.Title}}</a>
                                    </h3>
                                    <p class="text-sm text-gray-600 mb-3">{{.Excerpt}}</p>
                                    <div class="text-xs text-gray-500">
                                        <span>{{.CreatedAt.Format "January 2, 2006"}}</span> <span class="mx-1">•</span> <span>{{.ViewCount}} views</span>
                                    </div>
                                </div>
                            </article>
                        {{end}}
                    </div>
                </div>
                {{end}}
            </main>

            <!-- Sidebar Column -->
            <aside class="w-full lg:w-1/3">
                <div class="sticky top-24 space-y-8">

                    <!-- Categories Widget -->
                    <div class="bg-white p-6 rounded-lg shadow">
                        <h3 class="font-heading text-lg font-semibold mb-4 border-b pb-2">Categories</h3>
                        <ul class="space-y-1">
                            <li><a href="#" class="sidebar-link">Software Development (15)</a></li>
                            <li><a href="#" class="sidebar-link">Cybersecurity (8)</a></li>
                            <li><a href="#" class="sidebar-link">Cloud Computing (12)</a></li>
                            <li><a href="#" class="sidebar-link">AI & Machine Learning (5)</a></li>
                            <li><a href="#" class="sidebar-link">DevOps (7)</a></li>
                            <li><a href="#" class="sidebar-link">Hardware (3)</a></li>
                        </ul>
                    </div>

                    <!-- Recent Posts Widget -->
                    <div class="bg-white p-6 rounded-lg shadow">
                        <h3 class="font-heading text-lg font-semibold mb-4 border-b pb-2">Recent Posts</h3>
                        <ul class="space-y-3">
                            {{range $index, $post := .RecentPosts}}
                                {{if lt $index 4}}
                                    <li><a href="/blog/view/{{$post.ID}}" class="text-sm hover:text-accent">{{$post.Title}}</a></li>
                                {{end}}
                            {{else}}
                                <li class="text-sm text-gray-500">No posts available yet</li>
                            {{end}}
                        </ul>
                    </div>

                     <!-- Tags Widget -->
                    <div class="bg-white p-6 rounded-lg shadow">
                        <h3 class="font-heading text-lg font-semibold mb-4 border-b pb-2">Tags</h3>
                        <div class="flex flex-wrap gap-2">
                            <a href="#" class="text-xs bg-gray-200 hover:bg-gray-300 text-gray-700 px-2 py-1 rounded">Docker</a>
                            <a href="#" class="text-xs bg-gray-200 hover:bg-gray-300 text-gray-700 px-2 py-1 rounded">Security</a>
                            <a href="#" class="text-xs bg-gray-200 hover:bg-gray-300 text-gray-700 px-2 py-1 rounded">AWS</a>
                            <a href="#" class="text-xs bg-gray-200 hover:bg-gray-300 text-gray-700 px-2 py-1 rounded">Microservices</a>
                            <a href="#" class="text-xs bg-gray-200 hover:bg-gray-300 text-gray-700 px-2 py-1 rounded">Python</a>
                            <a href="#" class="text-xs bg-gray-200 hover:bg-gray-300 text-gray-700 px-2 py-1 rounded">JavaScript</a>
                            <a href="#" class="text-xs bg-gray-200 hover:bg-gray-300 text-gray-700 px-2 py-1 rounded">Serverless</a>
                        </div>
                    </div>

                    <!-- Newsletter Widget -->
                    <div class="bg-accent p-6 rounded-lg shadow text-white">
                        <h3 class="font-heading text-lg font-semibold mb-3">Stay Updated</h3>
                        <p class="text-sm mb-4 opacity-90">Get the latest tech news and tutorials straight to your inbox.</p>
                        <form>
                            <input type="email" placeholder="your.email@example.com" class="w-full px-4 py-2 rounded border border-transparent text-gray-800 focus:outline-none focus:ring-2 focus:ring-white mb-3">
                            <button type="submit" class="w-full px-4 py-2 bg-white text-accent font-semibold rounded hover:bg-gray-100 transition">Subscribe</button>
                        </form>
                    </div>

                </div>
            </aside>

        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-gray-800 text-gray-300 mt-16">
        <div class="container mx-auto px-6 py-8">
            <div class="flex flex-col items-center">
                <!-- Social Media Icons - Centered -->
                <div class="flex justify-center space-x-6 mb-6">
                    <a href="#" class="text-gray-400 hover:text-white transition text-2xl">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a href="#" class="text-gray-400 hover:text-white transition text-2xl">
                        <i class="fab fa-github"></i>
                    </a>
                    <a href="#" class="text-gray-400 hover:text-white transition text-2xl">
                        <i class="fab fa-linkedin-in"></i>
                    </a>
                    <a href="#" class="text-gray-400 hover:text-white transition text-2xl">
                        <i class="fab fa-youtube"></i>
                    </a>
                </div>

                <!-- Copyright and Links - Below Social Icons -->
                <div class="text-center">
                    <p>&copy; 2025 TechInsights Blog. All rights reserved.</p>
                    <div class="text-sm mt-3">
                        <a href="#" class="hover:text-white transition">About</a> |
                        <a href="#" class="hover:text-white transition">Contact</a> |
                        <a href="#" class="hover:text-white transition">Privacy Policy</a> |
                        <a href="#" class="hover:text-white transition">Terms of Service</a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script>
        // Mobile menu toggle
        document.addEventListener('DOMContentLoaded', function() {
            const menuToggle = document.getElementById('menu-toggle');
            const mobileMenu = document.getElementById('mobile-menu');

            if (menuToggle) {
                menuToggle.addEventListener('click', function() {
                    mobileMenu.classList.toggle('hidden');
                });
            }
        });
    </script>

</body>
</html>