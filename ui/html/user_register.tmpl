<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register | TechSphere</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/static/css/blog.css">
</head>
<body class="antialiased">

    <!-- Header -->
    <header class="bg-white shadow-md sticky top-0 z-50">
        <div class="container mx-auto px-6 py-4">
            <div class="flex justify-between items-center">
                <!-- Logo -->
                <a href="/" class="text-2xl font-heading font-bold tracking-tight">
                    <span class="text-accent">Tech</span>Sphere
                </a>

                <!-- Desktop Navigation -->
                <nav class="hidden md:flex items-center space-x-6">
                    <a href="#" class="text-gray-600 hover:text-accent">Software Dev</a>
                    <a href="#" class="text-gray-600 hover:text-accent">Cybersecurity</a>
                    <a href="#" class="text-gray-600 hover:text-accent">Cloud</a>
                    <a href="#" class="text-gray-600 hover:text-accent">AI/ML</a>
                    <a href="#" class="text-gray-600 hover:text-accent">About</a>
                    <a href="#" class="text-gray-600 hover:text-accent">Contact</a>
                </nav>

                <!-- Mobile Menu Button -->
                <button id="menu-toggle" class="md:hidden focus:outline-none">
                    <i class="fas fa-bars text-xl text-gray-600"></i>
                </button>
            </div>

            <!-- Mobile Navigation (Hidden by default) -->
            <div id="mobile-menu" class="hidden md:hidden mt-4">
                <nav class="flex flex-col space-y-2">
                    <a href="#" class="py-2 text-gray-600 hover:text-accent border-b">Software Dev</a>
                    <a href="#" class="py-2 text-gray-600 hover:text-accent border-b">Cybersecurity</a>
                    <a href="#" class="py-2 text-gray-600 hover:text-accent border-b">Cloud</a>
                    <a href="#" class="py-2 text-gray-600 hover:text-accent border-b">AI/ML</a>
                    <a href="#" class="py-2 text-gray-600 hover:text-accent border-b">About</a>
                    <a href="#" class="py-2 text-gray-600 hover:text-accent">Contact</a>
                </nav>
            </div>
        </div>
    </header>

    <!-- Main Content Area -->
    <div class="container mx-auto px-6 py-12">
        <div class="register-container">
            <h2>Create an Account</h2>

            <!-- Error box removed as requested -->

            <form action="/user/register" method="POST">
                {{if .CSRFToken}}
                <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">
                {{end}}

                <div class="form-group">
                    <label for="name">Full Name:</label>
                    <input type="text" id="name" name="name" value="{{.FormData.name}}" {{if index .FormErrors "name"}}class="is-invalid"{{end}}>
                    {{if index .FormErrors "name"}}
                    <div class="field-error">{{index .FormErrors "name"}}</div>
                    {{end}}
                </div>

                <div class="form-group">
                    <label for="email">Email Address:</label>
                    <input type="email" id="email" name="email" value="{{.FormData.email}}" {{if index .FormErrors "email"}}class="is-invalid"{{end}}>
                    {{if index .FormErrors "email"}}
                    <div class="field-error">{{index .FormErrors "email"}}</div>
                    {{end}}
                </div>

                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" {{if index .FormErrors "password"}}class="is-invalid"{{end}}>
                    {{if index .FormErrors "password"}}
                    <div class="field-error">{{index .FormErrors "password"}}</div>
                    {{end}}
                </div>

                <div class="form-group">
                    <label for="confirm-password">Confirm Password:</label>
                    <input type="password" id="confirm-password" name="confirm_password" {{if index .FormErrors "confirm_password"}}class="is-invalid"{{end}}>
                    {{if index .FormErrors "confirm_password"}}
                    <div class="field-error">{{index .FormErrors "confirm_password"}}</div>
                    {{end}}
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn-primary">Register</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-primary text-gray-300 mt-16">
        <div class="container mx-auto px-6 py-8">
            <div class="flex flex-col md:flex-row justify-between items-center">
                <div class="text-center md:text-left mb-4 md:mb-0">
                    <p>&copy; 2025 TechSphere Blog. All rights reserved.</p>
                    <div class="text-sm mt-1">
                        <a href="#" class="hover:text-white transition">About</a> |
                        <a href="#" class="hover:text-white transition">Contact</a> |
                        <a href="#" class="hover:text-white transition">Privacy Policy</a> |
                        <a href="#" class="hover:text-white transition">Terms of Service</a>
                    </div>
                </div>
                <div class="flex space-x-4">
                    <a href="#" class="text-gray-400 hover:text-white transition text-xl">
                        <i class="fab fa-github"></i>
                    </a>
                    <a href="#" class="text-gray-400 hover:text-white transition text-xl">
                        <i class="fab fa-linkedin-in"></i>
                    </a>
                    <a href="#" class="text-gray-400 hover:text-white transition text-xl">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a href="#" class="text-gray-400 hover:text-white transition text-xl">
                        <i class="fas fa-rss"></i>
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <script>
        // Mobile menu toggle
        document.addEventListener('DOMContentLoaded', function() {
            const menuToggle = document.getElementById('menu-toggle');
            const mobileMenu = document.getElementById('mobile-menu');

            if (menuToggle) {
                menuToggle.addEventListener('click', function() {
                    mobileMenu.classList.toggle('hidden');
                });
            }
        });
    </script>

</body>
</html>