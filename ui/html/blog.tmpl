<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TechSphere | Information Technology Blog</title>
    <!-- Tailwind for layout and utilities -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <!-- Custom Styles -->
    <link rel="stylesheet" href="/static/css/blog.css">
</head>
<body class="antialiased">

    <!-- Header -->
    <header class="bg-white shadow-sm sticky top-0 z-50">
        <div class="container mx-auto px-6 py-4">
            <div class="flex justify-between items-center">
                <!-- Logo -->
                <a href="/" class="text-2xl font-heading font-bold tracking-tight">
                    <span class="text-accent">Tech</span>Sphere
                </a>

                <!-- Desktop Navigation -->
                <nav class="hidden md:flex items-center space-x-6">
                    <a href="#" class="text-gray-600 hover:text-accent">Software Dev</a>
                    <a href="#" class="text-gray-600 hover:text-accent">Cybersecurity</a>
                    <a href="#" class="text-gray-600 hover:text-accent">Cloud</a>
                    <a href="#" class="text-gray-600 hover:text-accent">AI/ML</a>
                    <a href="#" class="text-gray-600 hover:text-accent">About</a>
                    <a href="#" class="text-gray-600 hover:text-accent">Contact</a>
                    <!-- Search -->
                    <div class="relative">
                        <input type="search" placeholder="Search..." class="px-4 py-2 border border-light rounded-full text-sm focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent">
                        <button class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-accent">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </nav>

                <!-- Mobile Menu Button -->
                <button id="menu-toggle" class="md:hidden focus:outline-none">
                    <i class="fas fa-bars text-xl text-gray-600"></i>
                </button>
            </div>

             <!-- Mobile Navigation (Hidden by default) -->
            <div id="mobile-menu" class="hidden md:hidden mt-4">
                <nav class="flex flex-col space-y-2">
                    <a href="#" class="py-2 text-gray-600 hover:text-accent border-b border-light">Software Dev</a>
                    <a href="#" class="py-2 text-gray-600 hover:text-accent border-b border-light">Cybersecurity</a>
                    <a href="#" class="py-2 text-gray-600 hover:text-accent border-b border-light">Cloud</a>
                    <a href="#" class="py-2 text-gray-600 hover:text-accent border-b border-light">AI/ML</a>
                    <a href="#" class="py-2 text-gray-600 hover:text-accent border-b border-light">About</a>
                    <a href="#" class="py-2 text-gray-600 hover:text-accent">Contact</a>
                     <!-- Mobile Search -->
                    <div class="relative pt-2">
                        <input type="search" placeholder="Search..." class="w-full px-4 py-2 border border-light rounded-full text-sm focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent">
                        <button class="absolute right-3 top-1/2 transform -translate-y-1/2 pt-2 text-gray-400 hover:text-accent">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </nav>
            </div>
        </div>
    </header>

    <!-- Main Content Area -->
    <div class="container mx-auto px-6 py-12">
        <div class="flex flex-col lg:flex-row gap-12">

            <!-- Posts Column -->
            <main class="w-full lg:w-2/3">
                {{if .Posts}}
                    <!-- Featured Post (first post) -->
                    {{with index .Posts 0}}
                    <article class="mb-12 card card-hover"> {/* Use card classes */}
                        <a href="#">
                            <img src="https://images.unsplash.com/photo-1518770660439-4636190af475?auto=format&fit=crop&w=1200&q=80" alt="Featured Tech Post" class="w-full h-64 object-cover">
                        </a>
                        <div class="p-6">
                            <div class="mb-2">
                                {{if .Categories}}
                                    <a href="#" class="text-xs uppercase font-semibold tracking-wide text-accent hover:underline">{{index .Categories 0}}</a>
                                {{else}}
                                    <a href="#" class="text-xs uppercase font-semibold tracking-wide text-accent hover:underline">Technology</a>
                                {{end}}
                            </div>
                            <h1 class="font-heading text-3xl font-bold mb-3 hover:text-accent transition">
                                <a href="#">{{.Title}}</a>
                            </h1>
                            <p class="text-text-secondary mb-4">{{.Excerpt}}</p> {/* Use text-secondary variable */}
                            <div class="flex items-center text-sm text-gray-500">
                                <img src="https://randomuser.me/api/portraits/men/32.jpg" alt="Author" class="w-8 h-8 rounded-full mr-2 object-cover">
                                <span>By Admin</span>
                                <span class="mx-2">•</span>
                                <span>{{.CreatedAt.Format "January 2, 2006"}}</span>
                                <span class="mx-2">•</span>
                                <span>{{.ViewCount}} views</span>
                            </div>
                        </div>
                    </article>
                    {{end}}

                    <!-- Recent Posts Grid -->
                    <h2 class="font-heading text-2xl font-bold mb-6">Recent Articles</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                        {{range $index, $post := .Posts}}
                            {{if gt $index 0}}
                                <!-- Post Card -->
                                <article class="card card-hover"> {/* Use card classes */}
                                    <a href="#">
                                        <img src="https://images.unsplash.com/photo-1605379399642-870262d3d051?auto=format&fit=crop&w=800&q=80" alt="Post Image" class="w-full h-48 object-cover">
                                    </a>
                                    <div class="p-5">
                                        <div class="mb-1">
                                            {{if $post.Categories}}
                                                <a href="#" class="text-xs uppercase font-semibold tracking-wide text-accent hover:underline">{{index $post.Categories 0}}</a>
                                            {{else}}
                                                <a href="#" class="text-xs uppercase font-semibold tracking-wide text-accent hover:underline">Technology</a>
                                            {{end}}
                                        </div>
                                        <h3 class="font-heading text-lg font-bold mb-2 hover:text-accent transition">
                                            <a href="#">{{$post.Title}}</a>
                                        </h3>
                                        <p class="text-sm text-text-secondary mb-3">{{$post.Excerpt}}</p> {/* Use text-secondary variable */}
                                        <div class="text-xs text-gray-500">
                                            <span>{{$post.CreatedAt.Format "Jan 2, 2006"}}</span> <span class="mx-1">•</span> <span>{{$post.ViewCount}} views</span> {/* Shortened date format */}
                                        </div>
                                    </div>
                                </article>
                            {{end}}
                        {{end}}
                    </div>
                {{else}}
                    <!-- No Posts Message -->
                    <div class="card empty-state">
                        <i class="fas fa-newspaper"></i>
                        <h2>No Blog Posts Yet</h2>
                        <p>We're working on creating amazing content for you. Check back soon for our latest articles!</p>
                    </div>
                {{end}}

                <!-- Pagination (Optional) -->
                {{if .Posts}}
                <div class="mt-12 flex justify-center">
                    <nav class="flex space-x-2" aria-label="Pagination">
                        <a href="#" class="relative inline-flex items-center px-4 py-2 text-sm font-medium text-gray-500 bg-white border border-light rounded-md hover:bg-gray-50">Previous</a>
                        <a href="#" class="relative inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-light rounded-md hover:bg-gray-50">1</a>
                        <a href="#" aria-current="page" class="relative z-10 inline-flex items-center px-4 py-2 text-sm font-medium text-accent border border-accent bg-blue-50 rounded-md">2</a>
                        <a href="#" class="relative inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-light rounded-md hover:bg-gray-50">3</a>
                        <a href="#" class="relative inline-flex items-center px-4 py-2 text-sm font-medium text-gray-500 bg-white border border-light rounded-md hover:bg-gray-50">Next</a>
                    </nav>
                </div>
                {{end}}

            </main>

            <!-- Sidebar Column -->
            <aside class="w-full lg:w-1/3">
                <div class="sticky top-24 space-y-8">

                    <!-- Categories Widget -->
                    <div class="sidebar-widget">
                        <h3>Categories</h3>
                        <ul class="space-y-1">
                            <li><a href="#" class="sidebar-link">Software Development (15)</a></li>
                            <li><a href="#" class="sidebar-link">Cybersecurity (8)</a></li>
                            <li><a href="#" class="sidebar-link">Cloud Computing (12)</a></li>
                            <li><a href="#" class="sidebar-link">AI & Machine Learning (5)</a></li>
                            <li><a href="#" class="sidebar-link">DevOps (7)</a></li>
                            <li><a href="#" class="sidebar-link">Hardware (3)</a></li>
                        </ul>
                    </div>

                    <!-- Recent Posts Widget -->
                    <div class="sidebar-widget">
                        <h3>Recent Posts</h3>
                        <ul class="space-y-3">
                            {{range $index, $post := .Posts}}
                                {{if lt $index 4}}
                                    <li><a href="#" class="text-sm hover:text-accent">{{$post.Title}}</a></li>
                                {{end}}
                            {{else}}
                                <li class="text-sm text-gray-500">No posts available yet</li>
                            {{end}}
                        </ul>
                    </div>

                     <!-- Tags Widget -->
                    <div class="sidebar-widget">
                        <h3>Tags</h3>
                        <div class="flex flex-wrap gap-2">
                            <a href="#" class="tag-link">Docker</a>
                            <a href="#" class="tag-link">Security</a>
                            <a href="#" class="tag-link">AWS</a>
                            <a href="#" class="tag-link">Microservices</a>
                            <a href="#" class="tag-link">Python</a>
                            <a href="#" class="tag-link">JavaScript</a>
                            <a href="#" class="tag-link">Serverless</a>
                        </div>
                    </div>

                    <!-- Newsletter Widget -->
                    <div class="newsletter-widget">
                        <h3>Stay Updated</h3>
                        <p>Get the latest tech news and tutorials straight to your inbox.</p>
                        <form>
                            <input type="email" placeholder="your.email@example.com" class="focus:outline-none focus:ring-2 focus:ring-white">
                            <button type="submit">Subscribe</button>
                        </form>
                    </div>

                </div>
            </aside>

        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-primary text-gray-300 mt-16">
        <div class="container mx-auto px-6 py-8">
            <div class="flex flex-col md:flex-row justify-between items-center">
                <div class="text-center md:text-left mb-4 md:mb-0">
                    <p>&copy; 2025 Enrisen Tzib. All rights reserved.</p>
                    <div class="text-sm mt-1">
                        <a href="#" class="hover:text-white transition">About</a> |
                        <a href="#" class="hover:text-white transition">Contact</a> |
                        <a href="#" class="hover:text-white transition">Privacy Policy</a> |
                        <a href="#" class="hover:text-white transition">Terms of Service</a>
                    </div>
                </div>
                <div class="flex space-x-4">
                    <a href="#" class="text-gray-400 hover:text-white transition text-xl">
                        <i class="fab fa-github"></i>
                    </a>
                    <a href="#" class="text-gray-400 hover:text-white transition text-xl">
                        <i class="fab fa-linkedin-in"></i>
                    </a>
                    <a href="#" class="text-gray-400 hover:text-white transition text-xl">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a href="#" class="text-gray-400 hover:text-white transition text-xl">
                        <i class="fas fa-rss"></i>
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <script>
        // Mobile menu toggle
        document.addEventListener('DOMContentLoaded', function() {
            const menuToggle = document.getElementById('menu-toggle');
            const mobileMenu = document.getElementById('mobile-menu');

            if (menuToggle) {
                menuToggle.addEventListener('click', function() {
                    mobileMenu.classList.toggle('hidden');
                });
            }
        });
    </script>

</body>
</html>